<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logotype_fin_1"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor Vet Services"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        style="@style/TextAppearance.Material3.TitleLarge"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="...por esos maestros que solo saben enseñarnos de alegría, amistad, compañía y lealtad. Ojalá algún día seamos tan animales como ellos..."
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txt_terms_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Al usar Doctor Vet Services aceptas "
        android:layout_marginTop="32dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/txt_terms_2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/txt_terms_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Términos y condiciones"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txt_privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Política de privacidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_terms_2"
        android:layout_marginTop="32dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_privacy_policy"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="8dp"
        >

        <TextView
            android:id="@+id/txt_web"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Email: doctorvet@xionce.com"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="WhatsApp: +5492612716685"
            android:gravity="center"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

